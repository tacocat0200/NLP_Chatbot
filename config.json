{
    "model": {
      "type": "bert",                    
      "name": "bert-base-uncased",       
      "max_length": 128,                 
      "pretrained": true                  
    },
    "server": {
      "host": "0.0.0.0",                 
      "port": 5000                        
    },
    "logging": {
      "level": "INFO",               
      "log_file": "chatbot.log"        
    },
    "database": {
      "uri": "mongodb://mongodb:27017", 
      "name": "chatbot_db"                
    },
    "sentiment_analysis": {
      "threshold": 0.5,                  
      "use_model": true                   
    },
    "topic_modeling": {
      "num_topics": 5,                   
      "lda_alpha": 0.01,                  
      "lda_beta": 0.01                    
    }
  }
  